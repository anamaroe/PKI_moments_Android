<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Naslov -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/title_profile_page"
                android:textSize="24sp"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/montserrat_reg"
                android:textColor="@color/light_gray" />

            <!-- Linija -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:background="#808080" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Obavestenja i logout dugmici -->
                <LinearLayout
                    android:id="@+id/profile_notifs"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="60dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/bell"
                        android:alpha="0.6"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_reg"
                        android:textColor="@color/light_gray"
                        android:text="@string/obavestenja"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/signout"
                        android:alpha="0.6"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_reg"
                        android:textColor="@color/light_gray"
                        android:text="@string/odjava"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Linija -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="#808080" />

            <!-- Podaci o korisniku -->
            <TableLayout
                tools:ignore="RtlSymmetry"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:fontFamily="@font/montserrat_reg"
                        android:paddingEnd="25dp"
                        android:text="@string/korisnicko_ime_malo"
                        android:textColor="@color/light_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:fontFamily="@font/montserrat_reg"
                        android:paddingStart="25dp"
                        android:text="@string/filler"
                        android:textColor="@color/dark_grey"
                        android:textSize="14sp"
                         />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:paddingEnd="25dp"
                        android:text="@string/ime"
                        android:fontFamily="@font/montserrat_reg"
                        android:textColor="@color/light_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:fontFamily="@font/montserrat_reg"
                        android:paddingStart="25dp"
                        android:textColor="@color/dark_grey"
                        android:text="@string/filler"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:paddingEnd="25dp"
                        android:text="@string/prezime"
                        android:fontFamily="@font/montserrat_reg"
                        android:textColor="@color/light_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/surname"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:paddingStart="25dp"
                        android:text="@string/filler"
                        android:textColor="@color/dark_grey"
                        android:fontFamily="@font/montserrat_reg"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_reg"
                        android:gravity="end"
                        android:paddingEnd="25dp"
                        android:text="@string/telefon"
                        android:textColor="@color/light_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/telephone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:paddingStart="25dp"
                        android:textColor="@color/dark_grey"
                        android:fontFamily="@font/montserrat_reg"
                        android:text="@string/filler"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:fontFamily="@font/montserrat_reg"
                        android:paddingEnd="25dp"
                        android:text="@string/adresa"
                        android:textColor="@color/light_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:fontFamily="@font/montserrat_reg"
                        android:paddingStart="25dp"
                        android:textColor="@color/dark_grey"
                        android:text="@string/filler"
                        android:textSize="14sp" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                style="?android:attr/buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnChangeData"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/dark_grey"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_reg"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="30dp"
                    android:minHeight="50dp"
                    android:textSize="16sp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/izmeni_podatke" />

                <Button
                    android:id="@+id/btnChangePassword"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/dark_grey"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_reg"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="30dp"
                    android:minHeight="50dp"
                    android:textSize="16sp"
                    android:text="@string/izmeni_lozinku"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Meni -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#3FFFFFFF"
        android:elevation="4dp"
        android:padding="8dp">

        <!-- Prva stavka menija -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/go_home"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:alpha="0.77"
                android:layout_marginBottom="1dp"
                android:src="@drawable/home" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_home"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/dark_grey" />
        </LinearLayout>

        <!-- Druga stavka menija -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/go_about"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/about_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:alpha="0.83"
                android:src="@drawable/bow2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_about"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/dark_grey" />
        </LinearLayout>

        <!-- Treća stavka menija -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/go_offers"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/offers_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:alpha="0.88"
                android:src="@drawable/happy_birthday_cake_icon_8"
                android:contentDescription="@string/menu_icon_cake" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_offers"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/dark_grey" />

        </LinearLayout>

        <!-- Cetvrta stavka menija -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/go_cart"
            android:orientation="vertical"
            android:gravity="center">

            <!-- alpha je opacity za sliku -->
            <ImageView
                android:id="@+id/cart_icon"
                android:alpha="0.775"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/basket2"
                android:contentDescription="@string/menu_icon_basket" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_cart"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/dark_grey" />
        </LinearLayout>


        <!-- Peta stavka menija -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/go_profile"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:alpha="0.875"
                android:src="@drawable/uuu"
                android:contentDescription="@string/menu_profile"/>
            <View
                android:layout_width="35dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/rounded_line" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
