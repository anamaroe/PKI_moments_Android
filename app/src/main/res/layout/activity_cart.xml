<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Naslov -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/title_basket_page"
                android:textSize="24sp"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/montserrat_reg"
                android:textColor="@color/light_gray" />

            <!-- Linija -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="14dp"
                android:background="#808080" />

            <!-- Sadrzaj korpe -->
            <LinearLayout
                android:id="@+id/cart_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <TextView
                android:id="@+id/ifCartEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_reg"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:text=""
                android:textColor="@color/light_gray"/>

        </LinearLayout>
    </ScrollView>

    <!-- Meni -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#3FFFFFFF"
        android:elevation="4dp"
        android:padding="8dp">

        <!-- Prva stavka menija -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/go_home"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:alpha="0.77"
                android:layout_marginBottom="1dp"
                android:src="@drawable/home" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_home"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/dark_grey" />
        </LinearLayout>

        <!-- Druga stavka menija -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/go_about"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/about_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:alpha="0.83"
                android:src="@drawable/bow2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_about"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/dark_grey" />
        </LinearLayout>

        <!-- TreÄ‡a stavka menija -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/go_offers"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/offers_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:alpha="0.88"
                android:src="@drawable/happy_birthday_cake_icon_8"
                android:contentDescription="@string/menu_icon_cake" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_offers"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/dark_grey" />
        </LinearLayout>

        <!-- Cetvrta stavka menija -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/go_cart"
            android:orientation="vertical"
            android:gravity="center">

            <!-- alpha je opacity za sliku -->
            <ImageView
                android:id="@+id/cart_icon"
                android:alpha="0.775"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/basket2"
                android:contentDescription="@string/menu_icon_basket" />

            <View
                android:layout_width="35dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/rounded_line" />

        </LinearLayout>


        <!-- Peta stavka menija -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/go_profile"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:alpha="0.875"
                android:src="@drawable/uuu"
                android:contentDescription="@string/menu_profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_profile"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/dark_grey" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
